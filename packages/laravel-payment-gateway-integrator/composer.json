{
  "name": "yourname/laravel-payment-gateway-integrator",
  "description": "Unified, extensible payment gateway abstraction for Laravel (Stripe, Razorpay, PayPal, PayU) with webhooks and test mode.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Your Name"
    }
  ],
  "require": {
    "php": ">=8.1",
    "illuminate/support": "^10.0|^11.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0"
  },
  "suggest": {
    "stripe/stripe-php": "^14.0",
    "razorpay/razorpay": "^2.9",
    "paypal/paypal-checkout-sdk": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "PaymentIntegrator\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "PaymentIntegrator\\PaymentGatewayServiceProvider"
      ],
      "aliases": {
        "PaymentGateway": "PaymentIntegrator\\Facades\\PaymentGatewayManager"
      }
    }
  }
}